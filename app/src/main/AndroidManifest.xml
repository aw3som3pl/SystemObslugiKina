<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wat.jannowakowski.systemobslugikina">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.views.Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.views.CustomerMenu"
            android:label="@string/logged_in_customer" />
        <activity
            android:name=".activities.views.StaffMenu"
            android:label="@string/logged_in_staff" />
        <activity
            android:name=".activities.views.Signup"
            android:label="@string/signup_activity_title" />
        <activity
            android:name=".activities.views.UserTickets"
            android:label="@string/user_tickets_title" />
        <activity android:name=".activities.views.SearchRepertoire" />
        <activity android:name=".activities.views.BuyTickets" />
        <activity android:name=".activities.views.AddMovieToRepertoire"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>