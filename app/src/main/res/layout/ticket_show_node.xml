<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:theme="@style/AppTheme.NoActionBar">

    <ImageView
        android:id="@+id/premiere_icon"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="left|top"
        app:srcCompat="@drawable/premiere" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Star wars VI"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="24dp"
                    android:textStyle="bold|italic"
                    tools:ignore="SpUsage" />

                <Button
                    android:id="@+id/remove_temp_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:text="X"
                    android:textColor="@color/text_white"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corners_8"
                    android:backgroundTint="@color/colorPrimary"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:tint="@color/text_white"
                        app:srcCompat="@drawable/outline_access_time_black_48dp" />

                    <TextView
                        android:id="@+id/movie_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corners_8"
                        android:backgroundTint="@color/text_white"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="11:34"
                        android:textColor="@color/text_black"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corners_8"
                    android:backgroundTint="@color/colorPrimary"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/asda"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:tint="@color/text_white"
                        app:srcCompat="@drawable/seat_free" />

                    <TextView
                        android:id="@+id/seat_designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_margin="5dp"
                        android:background="@drawable/round_corners_8"
                        android:backgroundTint="@color/text_white"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="D3"
                        android:textColor="@color/colorAccent"
                        android:textSize="22dp"
                        tools:ignore="SpUsage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corners_8"
                    android:backgroundTint="@color/colorPrimary"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:tint="@color/text_white"
                        app:srcCompat="@drawable/outline_local_movies_black_48dp" />

                    <TextView
                        android:id="@+id/movie_screening_technology"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corners_8"
                        android:backgroundTint="@color/text_white"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="3D"
                        android:textColor="@color/colorAccent"
                        android:textSize="22dp"
                        tools:ignore="SpUsage" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corners_8"
                    android:backgroundTint="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="Data:"
                        android:textColor="@color/text_white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/movie_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corners_8"
                        android:backgroundTint="@color/text_white"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="25-01-2018"
                        android:textColor="@color/text_black"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corners_8"
                    android:backgroundTint="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="Sala:"
                        android:textColor="@color/text_white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/movie_screening_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corners_8"
                        android:backgroundTint="@color/text_white"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="Nr 5"
                        android:textColor="@color/text_black"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corners_8"
                    android:backgroundTint="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="Zniżka:"
                        android:textColor="@color/text_white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/ticket_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corners_8"
                        android:backgroundTint="@color/text_white"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="Osoba niepełnosprawna"
                        android:textColor="@color/text_black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/use_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Skasuj"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
