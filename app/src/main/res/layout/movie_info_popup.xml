<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:theme="@style/AppTheme.NoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/movie_thumbnail"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@drawable/star_wars_4_thumbnail"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/movie_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                        android:gravity="center"
                        android:text="Gwiezdne Wojny IV"
                        android:textAlignment="center"
                        android:textColor="@color/text_black"
                        android:textSize="18dp"
                        android:textStyle="bold|italic"
                        tools:ignore="SpUsage" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/movie_screening_technology"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"

                                android:layout_weight="1"
                                android:background="@drawable/round_corners_8"
                                android:backgroundTint="@color/really_dark_blue"
                                android:gravity="center"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:text="3D"
                                android:textColor="@color/orange"
                                android:textSize="22dp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/movie_age_restriction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"

                                android:layout_weight="1"
                                android:background="@drawable/round_corners_8"
                                android:backgroundTint="@color/really_dark_blue"
                                android:gravity="center"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:text="12+"
                                android:textColor="@color/orange"
                                android:textSize="22dp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/movie_language"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"

                                android:layout_weight="1"
                                android:background="@drawable/round_corners_8"
                                android:backgroundTint="@color/dark_blue"
                                android:gravity="center"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:text="Napisy ANG"
                                android:textColor="@color/text_white"
                                android:textSize="22dp"
                                tools:ignore="SpUsage" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/movie_screening_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"

                                android:gravity="center"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:text="11.12.2018"
                                android:textColor="@color/dark_blue"
                                android:textSize="20dp"
                                tools:ignore="SpUsage" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/movie_screening_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"

                                android:gravity="center"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:text="11:45"
                                android:textColor="@color/dark_blue"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                tools:ignore="SpUsage" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/round_corners_8"
                                android:backgroundTint="@color/ic_launcher_background"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:tint="@color/mid_dark_blue"
                                    app:srcCompat="@drawable/outline_access_time_black_48dp" />

                                <TextView
                                    android:id="@+id/movie_duration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:paddingEnd="5dp"
                                    android:paddingStart="5dp"
                                    android:text="120 min"
                                    android:textColor="@color/dark_blue"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    tools:ignore="SpUsage" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/movie_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                                android:padding="8dp"
                                android:text="Testowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmuTestowy opis filmu"
                                android:textColor="@color/text_black" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_anchor="@+id/scrollView2"
            app:layout_anchorGravity="bottom|center">

            <Button
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="WyjdÅº"
                android:textSize="14dp"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/buy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorAccent"
                android:text="Kup bilety"
                android:textColor="@color/text_white"
                android:textSize="14dp"
                android:visibility="visible"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/premiere_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_anchor="@+id/scrollView2"
        app:layout_anchorGravity="left|top"
        app:srcCompat="@drawable/premiere" />

</android.support.design.widget.CoordinatorLayout>
