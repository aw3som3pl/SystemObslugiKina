<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.views.BuyTickets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:theme="@style/AppTheme.NoActionBar">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/movie_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Gwiezdne Wojny IV"
                            android:textAlignment="center"
                            android:textColor="@color/text_black"
                            android:textSize="18dp"
                            android:textStyle="bold|italic"
                            tools:ignore="SpUsage" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/premiere_icon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:elevation="2dp"
                                    android:visibility="gone"
                                    app:layout_anchor="@+id/linearLayout2"
                                    app:layout_anchorGravity="left|top"
                                    app:srcCompat="@drawable/premiere" />

                                <TextView
                                    android:id="@+id/movie_screening_technology"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"

                                    android:layout_weight="1"
                                    android:background="@drawable/round_corners_8"
                                    android:backgroundTint="@color/really_dark_blue"
                                    android:gravity="center"
                                    android:paddingEnd="5dp"
                                    android:paddingStart="5dp"
                                    android:text="3D"
                                    android:textColor="@color/orange"
                                    android:textSize="16dp"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:id="@+id/movie_age_restriction"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"

                                    android:layout_weight="1"
                                    android:background="@drawable/round_corners_8"
                                    android:backgroundTint="@color/really_dark_blue"
                                    android:gravity="center"
                                    android:paddingEnd="5dp"
                                    android:paddingStart="5dp"
                                    android:text="12+"
                                    android:textColor="@color/orange"
                                    android:textSize="16dp"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/movie_language"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"

                                    android:layout_weight="1"
                                    android:background="@drawable/round_corners_8"
                                    android:backgroundTint="@color/dark_blue"
                                    android:gravity="center"
                                    android:paddingEnd="5dp"
                                    android:paddingStart="5dp"
                                    android:text="Napisy ANG"
                                    android:textColor="@color/text_white"
                                    android:textSize="16dp"
                                    tools:ignore="SpUsage" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Data:"
                                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                                    <Space
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/movie_screening_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"

                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:paddingEnd="5dp"
                                        android:paddingStart="5dp"
                                        android:text="11.12.2018"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="20dp"
                                        tools:ignore="SpUsage" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Godzina:"
                                        android:textColor="@color/text_black" />

                                    <Space
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/movie_screening_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"

                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:paddingEnd="5dp"
                                        android:paddingStart="5dp"
                                        android:text="11:45"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="24dp"
                                        android:textStyle="bold"
                                        tools:ignore="SpUsage" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:background="@drawable/round_corners_8"
                                    android:backgroundTint="@color/ic_launcher_background"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:tint="@color/mid_dark_blue"
                                        app:srcCompat="@drawable/outline_access_time_black_48dp" />

                                    <TextView
                                        android:id="@+id/movie_duration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:paddingEnd="5dp"
                                        android:paddingStart="5dp"
                                        android:text="120 min"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="20dp"
                                        android:textStyle="bold"
                                        tools:ignore="SpUsage" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_corners_8"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="Podgląd sali:"
                    android:textColor="@color/text_white"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="Ekran" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/screening_room_layout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Sprawdź dostepność miejsca"
                            android:textColor="@color/text_white"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/round_corners_bottom_8"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Rząd / Kolumna"
                            android:textColor="@color/text_white"
                            android:textSize="20dp" />

                        <Spinner
                            android:id="@+id/row_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/rows" />

                        <Spinner
                            android:id="@+id/col_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/cols" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/new_ticket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rezerwuj bilet" />

                        <TextView
                            android:id="@+id/new_ticket_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="TextView"
                            android:textColor="@color/dark_blue"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ticket_available"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RadioGroup
                        android:id="@+id/discount_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checkedButton="@+id/radioButton3">

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/student" />

                        <RadioButton
                            android:id="@+id/radioButton4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/disabled_person" />

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/adult" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/child" />
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/round_corners_8"
                            android:backgroundTint="@color/colorAccent"
                            android:padding="10dp"
                            android:text="Cena:"
                            android:textColor="@color/text_black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/ticket_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:text="20 zł"
                            android:textColor="@color/text_black"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/close_temp_ticket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="zamknij" />

                        <Button
                            android:id="@+id/add_temp_ticket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/dark_green"
                            android:text="Dodaj"
                            android:textColor="@color/text_white" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fill_tickets_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/round_corners_8"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:text="Uzupełnij dane biletów:"
                        android:textColor="@color/text_white"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/tickets_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_anchor="@+id/scrollView2"
            app:layout_anchorGravity="bottom|center">

            <Button
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Wyjdź"
                android:textSize="14dp"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/buy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorAccent"
                android:text="Zatwierdź i kup"
                android:textColor="@color/text_white"
                android:textSize="14dp"
                android:visibility="visible"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

